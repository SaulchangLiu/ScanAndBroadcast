<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.scanandbroadcast.MainActivity">

    <Button
        android:id="@+id/StartScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartScan"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp" />

    <Button
        android:id="@+id/BroadcastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BroadCast"
        tools:layout_editor_absoluteX="263dp"
        tools:layout_editor_absoluteY="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/StopBraodcastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopBraodcast"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="51dp"
        app:layout_constraintTop_toBottomOf="@+id/BroadcastButton"
        app:layout_constraintEnd_toEndOf="@+id/BroadcastButton" />

    <Button
        android:id="@+id/StopScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopScan"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="51dp"
        app:layout_constraintStart_toStartOf="@+id/StartScanButton"
        app:layout_constraintTop_toBottomOf="@+id/StartScanButton" />

    <TextView
        android:id="@+id/PeripheralTextView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/StartScanButton"
        android:maxLines="30"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteY="176dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="176dp"
        android:layout_marginBottom="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/PeripheralTextView2" />

    <TextView
        android:id="@+id/PeripheralTextView2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/PeripheralTextView"
        tools:layout_editor_absoluteY="337dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="54dp" />
</android.support.constraint.ConstraintLayout>
